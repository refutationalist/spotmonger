pkgname=spotmonger
pkgver=1.3.0
pkgrel=1
pkgdesc="interface to music on console to work as a cartplayer"
arch=('x86_64' 'i686')
url="http://sam.vis.nu/"
license=('GPL')
groups=('studmufn')
depends=('nwjs' 'php' 'ffmpeg' 'tar' 'mplayer')
changelog=
replaces=('cartamoc')
conflicts=('cartamoc')
source=(spotmonger.tgz)
noextract=(spotmonger.nw)
install="spotmonger.install"



build() {
	echo "I like pie."
}


package() {
	cd $pkgdir

	cp -r ${srcdir}/mk/* .
	chown -R root:root $pkgdir
	chmod 755 ${pkgdir}/usr/bin/spotmonger
	
}
